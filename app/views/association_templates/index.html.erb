<div class="row mb-3">
  <div class="col-md-10">
    <h1>
      NLP Matches
    </h1>

  </div>
</div>

<div class="row mb-3">
  <div class="col-md-10">
    <table class="table">
      <tr>
        <th>
          Request
        </th>

        <th>
          Publication
        </th>

        <th>
          Cosine Similarity score
        </th>

        <th>
        </th>
      </tr>

      <% @associations.each do |association| %>
      <tr>
        <td>
          <%= association.request_id %>
        </td>

        <td>
          <%= association.publication_id %>
        </td>

        <td>
          <%= association.similar_score %>
        </td>

        <td>
          <a href="/associations/<%= association.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
