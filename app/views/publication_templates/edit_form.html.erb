<h1>
  Edit publication #<%= @publication.id %>
</h1>

<hr>

<form action="/update_publication/<%= @publication.id %>" method="post">

  <div class="form-group">
    <label for="customer_id">
      Customer
    </label>

    <input type="text" id="customer_id" name="customer_id" class="form-control" value="<%= @publication.customer_id %>">
  </div>

  <div class="form-group">
    <label for="pubmed_id">
      Pubmed
    </label>

    <input type="text" id="pubmed_id" name="pubmed_id" class="form-control" value="<%= @publication.pubmed_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update publication
  </button>
</form>

<hr>

<a href="/publications">
  Go back
</a>
