<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All requests
    </h1>

    <a href="/requests/new" class="btn btn-block btn-outline-secondary">
      Add a new request
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Rtc req
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td>
          <%= request.id %>
        </td>

        <td>
          <%= request.user_id %>
        </td>

        <td>
          <%= request.rtc_req_id %>
        </td>

        <td>
          <%= time_ago_in_words(request.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(request.updated_at) %> ago
        </td>

        <td>
          <a href="/requests/<%= request.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
