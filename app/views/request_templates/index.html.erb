<div class="row mb-2">
  <div class="col-md-10">
    <h1>
      All Data Requests
    </h1>

  </div>
</div>

<div class="row mb-2">
  <div class="col-md-10">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Customer
        </th>

        <th>
           Request Date
        </th>

        <th>
           Request Title
        </th>
        <th></th>
      </tr>

      <% @requests.each do |request| %>
      <tr>
        <td>
          <%= request.id %>
        </td>

        <td>
        <%= Customer.find_by(id: request.customer_id).lname %>,
        <%= Customer.find_by(id: request.customer_id).fname %>
        </td>

        <td> 
          <% if request.req_date != nil %>
            <%= request.req_date.strftime("%m/%d/%Y") %>
          <% end %>
        </td>

        <td>
          <%= request.req_title %>
        </td>
        <td>
          <a href="/requests/<%= request.id %>">Show details</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
